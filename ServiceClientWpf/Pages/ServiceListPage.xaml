<Page x:Class="ServiceClientWpf.Pages.ServiceListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServiceClientWpf.Pages"
      xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"  
      xmlns:qc="http://QuickConverter.CodePlex.com/"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      x:Name="SCPage"
      Title="ServiceListPage">

    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="White">
            <StackPanel Margin="15"
                        Orientation="Horizontal">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Resources>
                            <Style TargetType="StackPanel">
                                <Setter Property="Orientation" Value="Horizontal"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0 0 10 0"/>
                                <Style.Resources>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Margin" Value="10 0 0 0"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    </Style>
                                </Style.Resources>
                            </Style>
                        </Style.Resources>
                    </Style>   
                </StackPanel.Style>
                <StackPanel>
                    <TextBlock Text="Поиск:"/>
                    <TextBox x:Name="TBSearch"
                             TextChanged="TBSearch_TextChanged"
                             Height="35"
                             Width="150"
                             Margin="10 0 0 0"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Сортировка:"/>
                    <ComboBox x:Name="CBSort"
                              SelectionChanged="CBSort_SelectionChanged"
                              Width="{Binding ActualWidth, ElementName=TBSearch, Mode=OneWay}"
                              Height="{Binding ActualHeight, ElementName=TBSearch, Mode=OneWay}">
                        <ComboBoxItem Content="Все"
                                      />
                        <ComboBoxItem Content="По возрастанию"/>
                        <ComboBoxItem Content="По убыванию"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Фильтрация:"/>
                    <ComboBox x:Name="CBFilter"
                              SelectionChanged="CBFilter_SelectionChanged"
                              Width="{Binding ActualWidth, ElementName=TBSearch, Mode=OneWay}"
                              Height="{Binding ActualHeight, ElementName=TBSearch, Mode=OneWay}">
                        <ComboBoxItem Content="Все"
                                      />
                        <ComboBoxItem Content="от 0 до 5%"/>
                        <ComboBoxItem Content="от 5 до 15%"/>
                        <ComboBoxItem Content="от 15 до 30%"/>
                        <ComboBoxItem Content="от 30 до 70%"/>
                        <ComboBoxItem Content="от 70 до 100%"/>
                        
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Grid>

        <ListView x:Name="LVService"
                  Grid.Row="1"
                  Width="{Binding ElementName=SCPage, Mode=OneWay}"
                  d:ItemsSource="{d:SampleData ItemCount=4}"
                  ScrollViewer.HorizontalScrollBarVisibility="Hidden">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="border"
                            BorderBrush="Black"
                            Height="165"
                            Width="{qc:Binding '$P-40', P={Binding ElementName=LVService, Path=ActualWidth}}"
                            Margin="5"
                            BorderThickness="1"
                            Padding="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding ActualHeight, ElementName=border, Mode=OneWay}"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <GridSplitter Grid.Column="1" 
                                          Width="15"
                                          Background="Transparent"/>

                            <Border BorderThickness="1"
                                    BorderBrush="Black">
                                <Image Source="{Binding MainImage}" Stretch="UniformToFill"/>
                            </Border>

                            <Grid Grid.Column="2" 
                                  HorizontalAlignment="Left">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="30" Name="rowGrid"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="{Binding Title}"
                                           FontSize="18"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Bottom"/>
                                <TextBlock Text="{Binding Title}"
                                           Grid.Row="1"
                                           TextWrapping="Wrap"
                                           FontSize="18"/>
                                <TextBlock Text="{Binding Title}"
                                           Grid.Row="2"
                                           VerticalAlignment="Top"
                                           FontSize="13"/>

                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="5">
                                    <Button Content="редактировать"/>
                                    <Button Content="удалить"
                                            Margin="5 0 0 0"/>

                                </StackPanel>
                            </Grid>

                        </Grid>

                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </Grid>
</Page>
